<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="links">
      <div class="links-left">
        <a href="/directory">All</a>
        <a href="/unemployed">Unemployed</a>
        <a href="/employed">Employed</a>
      </div>
      <div class="links-right">
        <a href="/profile">Profile</a>
        <a href="/logout">Logout</a>
      </div>
    </div>

    <div class="profile">
      <div class="left">
        <img class="single-image" src="{{ avatar }}" alt="">
      </div>
      <div class="basic-info right">
        <h1 class="single-name">{{ name }}</h1>
        <p class="contact-info">
          {{ city }}, <a href="/country/{{ country }}">{{ country }}</a> |
          {{ #job }}
            {{ job }},
          {{ /job }}
          {{ ^job }}
            <span class="unemployed">Available for hire</span>
          {{ /job }}
            {{ company }}</p>
        <p class="contact-info">{{ email }} | {{ phone }}</p>
      </div>
      <div class="titles left">
        {{ #university }}
        <h4>Education</h4>
        {{ /university }}
        <h4>Skills</h4>
      </div>
      <div class="details right">
        {{ #university }}
        <p>{{ university }}</p>
        {{ /university }}
        <ul class="skills">
          {{ #skills }}
          <li><a href="/skills/{{ . }}">{{ . }}</a></li>
          {{ /skills }}
        </ul>
      </div>
    </div>
    <button id="edit-profile-button"><a href="/editprofile">Edit Profile</a></button>
    <form id="profile-form" action="/delete" method="post">
      <button id="delete-button" type="submit">Delete</button>
    </form>
  </body>
</html>
